{
  "version": 2,
  "outputDirectory": "public",
  "functions": {
    "api/index.js": {
      "maxDuration": 30
    }
  },
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/index"
    },
    {
      "src": "/jobs/(.*)",
      "dest": "/api/index"
    },
    {
      "src": "/auth/(.*)",
      "dest": "/api/index"
    },
    {
      "src": "/uploads/(.*)",
      "dest": "/api/index"
    },
    {
      "src": "/health",
      "dest": "/api/index"
    },
    {
      "src": "/",
      "dest": "/index_with_auth.html"
    },
    {
      "src": "/(.*)",
      "dest": "/index_with_auth.html"
    }
  ]
}
