{
  "version": 2,
  "outputDirectory": "public",
  "functions": {
    "api/index.cjs": {
      "maxDuration": 30
    }
  },
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/index.cjs"
    },
    {
      "source": "/jobs",
      "destination": "/api/index.cjs"
    },
    {
      "source": "/jobs/(.*)",
      "destination": "/api/index.cjs"
    },
    {
      "source": "/auth/(.*)",
      "destination": "/api/index.cjs"
    },
    {
      "source": "/uploads/(.*)",
      "destination": "/api/index.cjs"
    },
    {
      "source": "/health",
      "destination": "/api/index.cjs"
    },
    {
      "source": "/test-supabase",
      "destination": "/api/index.cjs"
    },
    {
      "source": "/test-create-points",
      "destination": "/api/index.cjs"
    },
    {
      "source": "/test-upload",
      "destination": "/api/index.cjs"
    },
    {
      "source": "/",
      "destination": "/index_with_auth.html"
    },
    {
      "source": "/(.*)",
      "destination": "/index_with_auth.html"
    }
  ]
}
